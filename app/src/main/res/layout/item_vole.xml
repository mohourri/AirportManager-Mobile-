<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10px">

    <TextView
        android:id="@+id/case_vole_ID"
        android:layout_width="158dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case_vole_nom_pilote" />

    <TextView
        android:id="@+id/case_vole_nom_pilote"
        android:layout_width="203dp"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/case_vole_date"
        android:layout_width="247dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/case_vole_ID"
        app:layout_constraintTop_toBottomOf="@+id/case_vole_nom_avion" />

    <TextView
        android:id="@+id/case_vole_nom_avion"
        android:layout_width="201dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toEndOf="@+id/case_vole_nom_pilote"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>